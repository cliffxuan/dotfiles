root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.{py,ipynb}]
indent_style = space
indent_size = 4
# used by isort
profile = black

# 2 space indentation
[*.{js,ts,sh,lua}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[{Makefile,.go}]
indent_style = tab

[*.lua]
max_line_length = 120
quote_type = single
call_parentheses = none
